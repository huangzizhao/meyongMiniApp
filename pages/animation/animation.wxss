/* pages/animation-test/animation-test.wxss */
page {
    height: 100%;
    background-color: #fff;
}
.at-content {
    width: 100%;
    height: 100%;
    text-align: center;
}

.at-content .at-img {
    width:100%;
    position:absolute; 
    overflow:hidden;
}

.at-content .at-img image {
    min-width: 100%;
}

.tip {
  font-size:24rpx;
  color:#BC8F8F;
  text-align: center;
  margin-top: 20rpx;
}

.view-canvas {
    position: absolute;
    width: 100%;
    top:0;
    bottom:0;
}

.view-canvas canvas{
    margin: auto;
}

.btn-next {
  height: 128rpx;
  margin-top:64rpx;
  text-align:center;
}

.btn-next button {
  border-radius: 16rpx;
  border: 3rpx solid #000;
  background-color: #fff;
  width: 500rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-again {
  font-size: 32rpx;
  color: #BC8F8F;
  margin-top: 20rpx;
}

.vi-play {
  width:100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;  
  text-align: center;
}

.vi-play view {
  font-size: 50rpx;
  margin-top: 35%;
  color: #808080;
  text-align: center;
}
