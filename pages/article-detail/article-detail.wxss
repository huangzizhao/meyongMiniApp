.functional-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 15rpx;
}

.functional-area .areaRight{
	display: inline-flex;
	flex-flow: row nowrap;
}
.areaRight .praise {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  color: #000;
  font-size: 24rpx;
  padding-right: 20rpx;
}

.collection {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  color: #000;
  font-size: 24rpx;
}

.praise .iconfont, .share .iconfont,.collection .iconfont {
  font-size: 50rpx;
  line-height: 1em;
  font-weight: 550;
}

.praise .icon-xihuan {
  color: rgba(255, 39, 65, 1);
}

.collection .icon-shoucang{
  color: rgba(241, 181, 0, 1);
}

.postComment {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background-color: #fff;
  height: 100rpx;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  z-index: 6;
  box-shadow: 0px -2px 9px rgba(0, 0, 0, 0.2);
}

.postComment image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 10rpx;
}

.postComment input {
  flex: 1;
  height: 100%;
  border-radius: 35rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: rgba(245, 245, 245, 1);
}

.postComment button {
  width: 90rpx;
  font-size: 28rpx;
  color: rgb(90, 166, 236);
}

.comment {
  width: 100vw;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.comment .commentBox {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgba(245, 245, 245, 1);
  font-size: 27rpx;
  border-radius: 10rpx;
}

.commentNum {
  color: rgba(156, 156, 156, 1);
}

.commentList .listItem {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.listItem text:first-child {
  font-weight: bold;
}

.commentArea {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  font-size: 28rpx;
  color: rgba(156, 156, 156, 1);
  padding: 20rpx;
}

.commentArea image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

