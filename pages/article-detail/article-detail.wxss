/* pages/article-detail/article-detail.wxss */

page {
  word-break: normal;
  background-color: rgba(247, 247, 247, 1);
}
.notesList{
	background-color: white;
	margin-bottom:20rpx;
}
.notesList:last-child{
	margin-bottom: 0;
}
.swiper-container {
  position: relative;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
}

.swiper-container .swiperLabel {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 25rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 65rpx;
  height: 45rpx;
  border-radius: 25rpx;
  z-index: 10;
}

.swiper-container swiper {
  min-height: 100vw;
  /* max-height: 120vw; */
}

.swiper-container .dotsList {
  position: relative;
  margin-top: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.dotsList .dot {
  width: 10rpx;
  height: 10rpx;
  margin: 0 5rpx;
  border-radius: 50%;
  transition: all 0.1s;
  background-color: rgba(230, 230, 230, 1);
}

.dotsList .dot.active {
  background-color: rgba(241, 181, 0, 1);
  /* background-color: rgba(255,39,65,1); */
}

button {
  border-radius: 0;
  font-size: 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  background-color: transparent;
}

button::after {
  border: none;
}

