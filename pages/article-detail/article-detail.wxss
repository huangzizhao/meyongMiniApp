.title {
  padding: 20rpx 20rpx 15rpx 20rpx;
  font-weight: 550;
  font-size: 35rpx;
  line-height: 35rpx;
}

.wxParse {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.articleContent.ellipsis {
  height: 200rpx;
  overflow: hidden;
}

.wxParse .articleHideControl {
  font-size: 30rpx;
  text-align: right;
}

.authorInfo {
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 25rpx;
}

.authorInfo .focus {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 44rpx;
  border-radius: 22rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(241, 181, 0, 1);
  color: rgba(241, 181, 0, 1);
  font-size: 21rpx;
}

.focus.active {
  color: rgb(59, 59, 59);
  border: 1px solid rgb(59, 59, 59);
  background-color: white;
}

.authorInfo .infoLeft {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
}

.infoLeft .userAvatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
  margin-right: 10rpx;
}

.userAvatar .message-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userAvatar .decorationImg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
}

.message-author {
  padding-left: 20rpx;
  font-size: 30rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-zan {
  display: inline-flex;
  color: #b8b9ba;
}

