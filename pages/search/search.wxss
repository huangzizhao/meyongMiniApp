/* pages/search/search.wxss */

page {
    background-color: rgba(245, 248, 250, 1);
    position: relative;
	padding-top: 88rpx;
    padding-bottom: env(safe-area-inset-bottom);
}

.app {
    padding-bottom: 96rpx;
}

.header {
    width: 100%;
    background-color: white;
    box-sizing: border-box;
    padding: 14rpx 24rpx;
    border-top: 1px solid #f5f5f5;
    box-shadow: 0 3rpx 10rpx rgba(122, 122, 122, 0.1);
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    position: fixed;
    top: 0;
    z-index: 99;
}

.search-container {
    flex: 1;
    display: inline-flex;
    flex-flow: row nowrap;
    align-items: center;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: rgba(246, 246, 246, 1);
    color: rgb(182, 182, 182);
    font-size: 28rpx;
    margin-right: 20rpx;
}

.search{
	font-size: 30rpx;
	color: #999;
}

.in-bar {
    color: #999;
}

.search-container .bar {
    flex: 1;
    display: inline-flex;
    align-items: center;
    height: 100%;
    border-top-right-radius: 28rpx;
    border-bottom-right-radius: 28rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.inputClose {
    font-size: 28rpx;
    line-height: 28rpx;
    margin-right: 20rpx;
}

.icon-sousuo {
    font-size: 35rpx;
    line-height: 35rpx;
    margin-left: 24rpx;
    margin-right: 16rpx;
	color: #999;
}

.cancel {
    font-size: 30rpx;
    line-height: 30rpx;
    width: 70rpx;
    text-align: center;
    display: inline-block;
    border: none;
}
