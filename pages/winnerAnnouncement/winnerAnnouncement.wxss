/* pages/winnerAnnouncement/winnerAnnouncement.wxss */
.app{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	position: relative;
	font-size: 24rpx;
	color: rgba(106,63,21,1);
	display: flex;
	justify-content: center;
	align-items: flex-end;
}

.bgImg{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.scrollView{
	width: 80vw;
	height: 80vw;
	box-sizing: border-box;
	padding: 0 35rpx;
	margin-bottom:calc(100vh / 8.5); 
}

.activity{
	margin-bottom: 50rpx;
}

.activityDate{
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 20rpx
}

.projectItem{
	margin-bottom: 30rpx;
}

.projectName{
	font-size: 31rpx;
	font-weight: bold;
	border-bottom: 1rpx solid rgba(106,63,21,1);
	text-align: center;
	padding:10rpx 0;
	margin-bottom: 20rpx;
}

.winners{
	box-sizing: border-box;
	width: 100%;
	padding: 0 40rpx;
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	margin: 10rpx 0;
}

.noWinners{
	text-align: center;
}