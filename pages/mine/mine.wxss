/* pages/person-center/person-center.wxss */
page{
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}
.app{
  padding-bottom: 96rpx;
  position: relative;
}
button::after{
  border: none;
}
.header .mineBackground{
  width: 100vw;
  height: 438rpx;
  overflow: hidden;
}
.mineBackground image{
  width: 100%;
  height: 100%;
  display: block;
}

.minePersonCenter{
  position: relative;
  box-sizing: border-box;
  border-bottom: 2rpx solid #707070;
  padding-bottom: 42rpx;
}

.personCenterBox{
  width: calc(100vw - 72rpx);
  margin: -230rpx auto 0 auto;
  background-color: white;
  height: 372rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(122, 122, 122, 0.1);
  display: flex;
  align-items: center;
}

.funList{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  box-sizing: border-box;
  padding: 0 25rpx;
}

.funList .funItem{
  flex: 1;
  display: inline-flex;
  flex-flow: column wrap;
  justify-items: center;
  align-content: center;
  text-align: center;
  padding: 0 30rpx;
}

.funList .dividingLine{
  font-size: 20rpx;
  margin-top: 10rpx;
}

.funItem .iconfont{
  color: #000;
  font-size: 45rpx;
  line-height: 45rpx;
  margin-bottom:10rpx;
  
}

.funItem text{
  font-size: 20rpx;
}
