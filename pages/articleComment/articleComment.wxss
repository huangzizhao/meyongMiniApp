.underReplyList {
    width: 100%;
    margin-top: 20rpx;
}

.underReplyList .underReplyItem {
    background-color: rgba(245, 248, 250, 1);
    border-radius: 5rpx;
    box-sizing: border-box;
    padding: 25rpx 20rpx;
    position: relative;
}

.underReplyItem::before {
    content: '';
    width: calc(100% - 40rpx);
    height: 1rpx;
    background-color: rgba(199, 198, 198, 0.8);
    position: absolute;
    bottom: 0;
}

.underReplyList .underReplyItem:last-child::before {
    content: '';
    height: 0;
    background-color: unset;
}

.underReplyTop {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.underReplyTop image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.underReplyTop .underRight {
    flex: 1;
}

.underReplyTop .underRight .infoAndReply .info text:first-child {
    font-size: 27rpx;
}

.underReplyContent {
    font-size: 27rpx;
    margin-top: 20rpx;
    font-weight: 400;
}

.underReplyContent text:first-child {
    color: rgb(104, 103, 103);
}
