page{
  background-color: rgba(255,255,255,1);
}
form{
  width:100vw;
  display: block;
  z-index: 1;
}
.pay-cell{
  width: 100vw;
  padding: 10px 15px;
  position: relative;
  display:-webkit-box;
  display:-webkit-flex;
  display: flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  box-sizing: border-box;
  overflow: hidden;
}

.pay-cell::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 15px;
  overflow: hidden;
  width: 100%;
  border-bottom: 0.5rpx solid #C7C7CC;
}
.pay-label{
  width: 50vw;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 30rpx;
  font-weight: normal;
}
.pay-bd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  text-align: right;
}
.pay-bd input{
  font-size: 30rpx;
  color: #999999;
}
.place-holder{
  font-size: 30rpx;
  color: #999999;
  text-align: right;
}
.picker{
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.weui-input{
  font-size: 30rpx;
  color: #999999;
}

.payForSubscription{
  height: 88rpx;
  width: 100vw;
  position: fixed;
  bottom: 0;
  color: #F8F8F8;
  border-top: 1rpx solid rgba(0,0,0,0.3);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  z-index: 2
}

button::after{
  border: none;
}

.paybotton{
  background-color: #FBDD19;
  border-radius: 38rpx;
  height: 76rpx;  
  width: 80vw;
  font-size: 34rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content:center;
}
