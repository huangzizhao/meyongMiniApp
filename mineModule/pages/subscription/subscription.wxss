/* pages/subscription/subscription.wxss */
.cp-carton {
  border-radius: 10rpx;
  margin: 5px;
  height: 280rpx;
}

.cp-carton image {
  width:740rpx;
  height:280rpx;
  position:absolute;
}

.cp-card-type {
  position:absolute;
  margin-top:30rpx;
  margin-left: 50rpx;
  width: 100px;
  font-size:24rpx;
  text-align: right;
  color:#fff;
}

.cp-project {
  position:absolute;
  margin-top:30rpx;
  margin-left: 290rpx;
  width: 400rpx;
  font-size:24rpx;
  color:rgb(107,107,107);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.cp-use-scope {
  position:absolute;
  margin-top:130rpx;
  margin-left: 40rpx;
  font-size:13px;
  color:#fff;
}

.cp-money {
  position:absolute;
  margin-top:170rpx;
  margin-left: 36rpx;
  font-size:60rpx;
  color:#fff;
  width: 220rpx;
  text-align: right;
}

.cp-content {
  position:absolute;
  margin-top:130rpx;
  margin-left: 280rpx;
  font-size:28rpx;
  color:#000;
}

.cp-carton .cp-card {
  width: 50%;
  height: 90%;
  float: left;
  font-size: 30rpx;
  margin:15rpx;
}

.cp-time {
  font-size:12px;
  color:rgb(107,107,107);
  margin-top:4rpx;
  margin-bottom: 20rpx;
}

.empty {
  text-align:center;
  font-size:28rpx;
  margin:20rpx;
  color:#AAAAAA;
}

.order-card{
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  width: 100vw;
}
.order-top{
  width: inherit;
  box-sizing: border-box;
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #F5F5F5;
  padding: 0 20rpx;
  color: #000;
  position: relative;
}
.order-top text{
  font-size: 30rpx;
}
.order-status{
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 21rpx;
  width: 114rpx;
  height: 42rpx;
  font-size: 24rpx;
  background-color:#F8E71C;
}
.order-bottom{
  width: inherit;
  box-sizing: border-box;
  display: flex;
  height: 246rpx;
}
.order-info{
  flex:1;
  font-size: 30rpx;
  height: inherit;
  padding: 0 10rpx 0 20rpx;
  box-sizing: border-box;
}
.order-info .contact,.order-info .phone,.order-info .activity,.order-info .usedate{
  margin: 6rpx 0;
  width: 386rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order-money{
  height: inherit;
  box-sizing: border-box;
  border-left: 1rpx solid #F5F5F5;
  width: 322rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.money-area{
  color: #000;
  width:256rpx;
}
.RMB{
  font-size: 30rpx;
  display: inline-block
}
.amount{
  display: inline-block;
  font-size: 90rpx;
}