/* pages/wallet/wallet.wxss */
ec-canvas {
  width: 100%;
  height: 50%;
  background-color: #FFF;
}

.wt-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 

.wt-amount {
  width: 100%;
  height: 150rpx;
  background-color: white;
}

.wt-total {
  text-align: center;
  width: 50%;
  float: left;
  height: 80%;
  margin-top: 10rpx;
  border-right: 2rpx #9d9d9d solid;
  font-size: 40rpx;
}

.wt-earning {
  width: 45%;
  float: left;
  height: 80%;
  margin-top: 10rpx;
  text-align: center;
  -webkit-align-items: center;
  -webkit-flex: 1;
  font-size: 40rpx;
}
