.swiper {
    margin-top: 180rpx;
    width: 100%;
    height: calc(100vh - 180rpx);
    box-sizing: border-box;
}

swiper-item {
    text-align: center;
    overflow-y: scroll;
}

swiper-item image {
    width: 100%;
}

.itemBox {
    width: 95%;
    height: 100%;
    display: flex;
    flex-flow: column wrap;
    margin-top: 40px;
    box-sizing: border-box;
    /* border: 1rpx solid #cacaca; */
    border-radius: 8rpx;
    box-shadow: 5rpx 5rpx 10rpx rgba(50, 50, 50, 0.1);
    position: relative;
    top: 35%;
    transform: translateY(-45%);
    align-content: space-between;
    justify-content: space-between;
    overflow: hidden;
}

.itemBox .boxContent {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    box-sizing: border-box;
    padding-bottom: 30rpx;
}

.boxContent .content {
    width: 80%;
	/* text-indent:2em; */
    text-align: left;
    font-size: 25rpx;
    margin-top: 20rpx;
}

.boxContent .descript {
    font-size: 25rpx;
    color: rgb(128, 126, 126);
}

.itemBox .grade {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
	font-size: 0;
}

.grade .gradeBg {
    width: 100%;
}

.grade .boxTop {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: column wrap;
    font-size: 30rpx;
    color: #fff;
    text-shadow: 0 0 10px rgb(114, 112, 112);
}

.boxTop image {
    width: 130rpx;
    height: 130rpx;
}
