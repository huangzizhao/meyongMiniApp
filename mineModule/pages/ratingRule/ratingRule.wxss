page {
    background-color: white;
}

.nav {
    height: 150rpx;
    line-height: 150rpx;
    box-sizing: border-box;
    width: 100%;
    overflow: hidden;
    background: rgba(255, 230, 0,.2);
    box-shadow: rgba(0, 0, 0, 0.1) 0 0 20rpx;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.nav .navBox{
	position: relative;
	width: 100%;
	height: 100%;
}

.navBox .underSlider {
    position: absolute;
    bottom: 0rpx;
    height: 6rpx;
    border-radius: 3rpx;
    width: 12vw;
    background-color: #f7e22b;
}

.navItem {
    width: 20vw;
    height: 100%;
    display: inline-flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.navItem image {
    width: 10vw;
    height: 10vw;
}

.navItem image.gray {
    filter: grayscale(100%);
}

.navItem.active {
    position: relative;
    /* border: 1px solid #e0b938; */
}

