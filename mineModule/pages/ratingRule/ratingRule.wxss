/* mineModule/pages/ratingRule/ratingRule.wxss */

.swiper {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
}

swiper-item {
    text-align: center;
}

swiper-item image {
    width: 100%;
}

.itemBox {
    width: 90%;
    height: 600rpx;
    display: inline-block;
    margin-top: 40px;
    box-sizing: border-box;
    box-shadow: 0 0 4px 4px #f2f2f2;
    position: relative;
    top: 33%;
    transform: translateY(-45%);
}
