/* pages/aboutMia/aboutMia.wxss */
.app {
    width: 100vw;
	min-height: 100Vh;
    box-sizing: border-box;
	padding: 20rpx 0;
}
.introduction{
	margin: 0rpx 20rpx 30rpx 20rpx;
	background-color: rgba(255,255,255,1);
	border-radius: 10rpx;
	box-shadow:0px 4rpx 16rpx #cecece;
	padding: 20rpx 30rpx;
}
.introduction .title {
	width: 150rpx;
	height: 50rpx;
	text-align: center;
	font-size: 28rpx;
	display: flex;
	border-bottom: 0.5px solid #777474;
	flex-flow: row nowrap;
	align-items: center;
	justify-content: center;
	margin:  0 auto 30rpx auto;
	font-weight: bold
}

.introduction text {
    display: flex;
    font-size: 24rpx;
    color: #3d3b3b;
    text-indent: 2em;
    text-align: left;
	margin-bottom: 15rpx;
}
