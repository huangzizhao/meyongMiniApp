/* pages/ordersList/ordersList.wxss */
.orderItem {
    background-color: #fff;
    box-sizing: border-box;
    overflow: hidden;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
}

.red {
	font-weight: bold;
    color: rgba(157, 62, 70, 1);
}

.blue {
	font-weight: bold;
    color: rgba(124, 172, 245, 1);
}

.orderItem:last-child {
    margin: 0;
}

.orderCode {
    position: relative;
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
}

.orderCode::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    border-top: 0.5px solid rgba(241, 241, 241, 1);
}

.purchaseActivity {
    height: 240rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    background-color: #fff;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.activityCover {
    width: 170rpx;
    height: 170rpx;
    overflow: hidden;
    border-radius: 5rpx;
    border: 0.5px solid rgba(196, 194, 194, 1);
}

.activityCover image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.activityInfo {
    height: 170rpx;
    flex: 1;
    display: flex;
    flex-flow: row wrap;
    align-content: space-around;
    font-size: 28rpx;
    margin-left: 20rpx;
    color: rgba(85, 85, 85, 1);
}

.infoTop {
	width: 100%;
	display:inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.infoMid {
	width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.orderBottom {
    position: relative;
    width: 100%;
    height: 80rpx;
    display: flex;
    box-sizing: border-box;
    align-items: center;
    justify-content: flex-end;
    font-size: 24rpx;
}

.orderBottom::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    border-top: 0.5px solid rgba(241, 241, 241, 1);
}

.noOrders {
    width: 400rpx;
    margin: 15vh auto 0 auto;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    color: rgb(185, 185, 185);
	font-size: 30rpx;
	text-align: center
}

.noOrders .icon-order {
    font-size: 200rpx;
	margin-bottom: 10rpx;
}
