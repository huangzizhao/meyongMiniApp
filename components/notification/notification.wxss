/* components/notification/notification.wxss */

.notification {
    position: fixed;
    top: 60rpx;
    left: 32rpx;
    min-width: 236rpx;
    height: 66rpx;
    border-radius: 33rpx;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    box-sizing: border-box;
    padding: 0 1px;
    z-index: 3;
}

.userAvatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.4);
    overflow: hidden;
    box-sizing: border-box;
}

.userAvatar image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.announcement {
    font-size: 21rpx;
    color: #fff;
    text-align: left;
    padding: 0 15rpx;
}
