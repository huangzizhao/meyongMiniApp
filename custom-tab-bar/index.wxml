<!--customTabBar/customTabBar.wxml-->
<cover-view class='tabBar' wx:if='{{tabBarShow}}'>
    <cover-view class='tabBarBorder'></cover-view>
    <button hover-class="none" open-type="getUserInfo" bindgetuserinfo='switchTab' wx:for='{{list}}' wx:key='index' class='tabBarItem' data-path='{{item.pagePath}}' data-index='{{index}}'>
        
            <!-- <cover-image class="{{index === 1 ? 'singleImg' : ''}}" src='{{selected === index ? item.selectedIconPath : item.iconPath}}'></cover-image> -->
            <cover-image class='tabBarImg' src='{{selected === index ? item.selectedIconPath : item.iconPath}}'></cover-image>
            <cover-view class='tabBarContent' style='color: {{selected === index ? selectedColor : color}}'>{{item.text}}</cover-view>
       
    </button>
</cover-view>