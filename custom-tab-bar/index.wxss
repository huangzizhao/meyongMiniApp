/* customTabBar/customTabBar.wxss */
button {
  border-radius: 0;
  padding: 0;
  margin: 0;
  background-color: transparent;
}

button::after {
  border: none;
}

.btnhover {
  background-color: transparent;
}

.tabBar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tabBarBorder {
  background-color: rgba(255, 255, 255, 1);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2rpx;
  transform: scaleY(0.5);
}

.tabBarItem {
  flex: 1;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
}

.tabBarItem .tabBarImg {
  width: 45rpx;
  height: 45rpx;
  box-sizing: border-box;
}

.tabBarItem .tabBarImg.singleImg {
  width: 90rpx;
  height: 67.5rpx;
  padding: 0;
}

.tabBarItem .tabBarContent {
  display: inline-flex;
  width: unset;
  height: unset;
  margin-top: 10rpx;
  font-size: 20rpx;
  line-height: 20rpx;
}
