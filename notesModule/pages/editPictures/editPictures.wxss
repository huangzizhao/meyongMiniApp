/* notesModule/pages/editPictures/editPictures.wxss */
page {
  background-color: white;
  padding-bottom: env(safe-area-inset-bottom);
}

.app{
  padding-bottom: 55px;
}

button {
  border-radius: 0;
  font-size: 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  background-color: transparent;
}

button::after {
  border: none;
}

.swiper-container {
  position: relative;
}

.next {
  position: absolute;
  top: 8rpx;
  right: 30rpx;
  width: 110rpx;
  height: 60rpx;
  font-size: 23rpx;
  border-radius: 30rpx;
  background-color: rgb(247, 197, 33);
  color: white;
  z-index: 10;
}

.swiper-container .swiperLabel {
  position: relative;
  background-color: white;
  color: rgba(0, 0, 0, 0.6);
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 100vw;
  height: 45px;
  border-radius: 25rpx;
  z-index: 10;
}

.imgSwiper {
  width: 100vw;
  height: 75vh;
}

.imgSwiper image {
  width: 100%;
  height: 100%;
}

.tabBar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 55px;
  width: 100vw;
  background: white;
  color: rgb(78, 77, 77);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tabBarItem {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tabBarItem text {
  font-size: 24rpx;
}

.tabBarItem .iconfont {
  font-size: 50rpx;
  line-height: 50rpx;
  margin-bottom: 2px;
}

/*功能待开发*/
.tabBar .tabBarItem.todo{
	color:rgb(172, 172, 172);
}


.chooseLabelList {
  display: flex;
  flex-flow: row wrap;
  box-sizing: border-box;
  padding: 20rpx 15rpx;
}

.label .iconfont{
	color: rgb(196, 189, 189);
	font-size:20rpx;
	margin-left: 10rpx;
}

.chooseLabelList .label {
  border: 1rpx solid rgb(175, 173, 173);
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.chooseLabelList .hasSelected{
  border: none;
  background-color: rgb(247, 197, 33);
  color: white;
}

.popBox{
	position: relative;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	overflow: hidden;
	display: flex;
	flex-flow: column wrap;
	justify-content: center;
	align-items: center;
}

.popBox .closePop{
	position: absolute;
	top: 0;
	right: 0;
	display: inline-flex;
}

.closePop .iconfont{
	color: rgba(212, 212, 212, 1);
	font-size: 45rpx;
	line-height: 45rpx;
	font-weight: 100;
}

.popBox .pushNewLabel{
	margin-top: 30rpx;
	display: inline-flex;
	flex-flow: column wrap;
	align-items: center;
	justify-content: center;
	width: 200rpx;
	height: 60rpx;
	border-radius: 30rpx;
	color: rgb(126, 123, 123);
	font-size: 25rpx;
	background-color:rgb(247, 197, 33);
}

.popBox .labelInput{
	width: 400rpx;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 35rpx;
	border: 1px solid rgb(211, 210, 210);
}

.labelInput input{
	width: 100%;
	height: 100%;
	line-height: 70rpx;
	border-radius: 35rpx;
	padding: 5rpx 20rpx;
	box-sizing: border-box;
	font-size: 25rpx;
	text-align: center;
}