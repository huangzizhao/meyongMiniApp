/* pages/notificationList/notificationList.wxss */
.activityList{
  position: relative;
  width: 100vw;
  overflow: hidden;
}

.activityList .activity{
  width: 100vw;
  height: 320rpx;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 15rpx;
  z-index: 0;
}

.activity:last-child{
  margin: 0;
}

.activity image{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activity .tip{
  width: 150rpx;
  height: 50rpx;
  background: rgba(102, 102, 102,.6);
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.noOrders {
    width: 400rpx;
    margin: 15vh auto 0 auto;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    color: rgb(185, 185, 185);
	font-size: 30rpx;
	text-align: center
}

.noOrders .icon-order {
    font-size: 200rpx;
	margin-bottom: 10rpx;
}

