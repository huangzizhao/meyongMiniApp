/* pages/groupPurchase/groupPurchase.wxss */

.app {
    width: 100vw;
    position: relative;
    padding-bottom: 90rpx;
}

button {
    border-radius: 0;
    font-size: 30rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    margin: 0;
    background-color: transparent;
}

button::after {
    border: none;
}

.imgList image {
    width: 100%;
    display: block;
}

swiper {
    height: 100vw;
    position: relative;
}

.slideImage {
    width: 100vw;
    height: 100vw;
}

.dynamicInformation {
    width: 100vw;
    box-sizing: border-box;
    height: 98rpx;
    display: flex;
    flex-flow: row nowrap;
    position: relative;
}

.dynamicInformation .tips {
    position: absolute;
    top: -82rpx;
    right: 20rpx;
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    flex-flow: row nowrap;
    padding-left: 10rpx;
    font-size: 22rpx;
    background-color: rgba(0, 0, 0, 0.3);
    box-sizing: border-box;
    height: 62rpx;
    border-radius: 31rpx;
    border: 0.5rpx solid rgba(0, 0, 0, 0.3);
    color: #fff;
}

.tips .multiplayerPrice {
    margin-left: 10rpx;
    height: 100%;
    border-radius: 31rpx;
    background-color: rgba(240, 18, 60, 1);
    font-size: 25rpx;
    font-weight: bold;
    box-sizing: border-box;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 10rpx;
}

.dynamicInformation-right {
    width: 252rpx;
    height: 100%;
    background-image: linear-gradient(to right, rgb(255, 63, 97), rgb(222, 34, 29));
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.rightNav {
    width: 180rpx;
    display: inline-flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}

.rightNav .activityEnd {
    font-size: 25rpx;
    font-weight: bold;
    color: rgb(212, 212, 212);
}

.description {
    font-size: 20rpx;
    color: #fff;
}

.countdown {
    display: inline-flex;
    align-items: center;
    font-size: 24rpx;
}

.countdown .time {
    width: 38rpx;
    height: 38rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(217, 0, 9, 1);
    font-size: 24rpx;
    margin: 0 5rpx;
}

.dynamicInformation-left {
    flex: 1;
    height: 100%;
    background-color: rgba(255, 173, 1, 1);
    color: #fff;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
    padding-left: 26rpx;
}

.unitPrice {
    height: 70rpx;
    display: inline-flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: flex-end;
}

.unitPriceNormal {
    font-size: 30rpx;
    line-height: 0.8em;
    display: inline-flex;
    align-content: flex-end;
}

.unitPriceLarge {
    font-size: 80rpx;
    line-height: 0.8em;
    vertical-align: bottom;
}

.infomationRight {
    width: 160rpx;
    display: inline-flex;
    justify-content: flex-start;
    flex-flow: row wrap;
}

.originalPrice {
    width: 160rpx;
    display: inline-block;
    color: #fff;
    font-size: 18rpx;
}

.originalPrice .originalPriceText {
    text-decoration: line-through;
}

.hasPurchase {
    background-color: rgba(0, 0, 0, 0.2);
    font-size: 20rpx;
    height: 32rpx;
    width: 160rpx;
    border-radius: 16rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.btnList {
    width: 100vw;
    height: 90rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    display: -webkit-flex;
    flex-flow: row nowrap;
    z-index: 2;
}

.shareBtn {
    width: 114rpx;
    height: 100%;
    background-color: rgba(205, 205, 205, 1);
}

.shareBtn .iconfont {
    font-size: 50rpx;
    color: #fff;
}

.shareBtn image {
    width: 42rpx;
    height: 42rpx;
}

.contact, .enjoyActivivy {
    flex: 1;
}

.contact {
    background-color: rgba(33, 33, 33, 1);
    color: #fff;
}

.enjoyActivivy {
    background-image: linear-gradient(to right, rgb(255, 63, 97), rgb(222, 34, 29));
    color: #fff;
}

.mask {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(17, 17, 17, 0.7);
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;
    z-index: 3;
}

.canvasNav {
    position: relative;
    width: 296px;
    height: 450px;
    z-index: 6;
    display: inline-flex;
    flex-flow: row wrap;
    align-content: space-between;
    justify-content: center;
}

.canvasNav .shareCanvas {
    width: 100%;
    height: 100%;
    z-index: 6;
}

.saveImg {
    border: 1rpx solid #fff;
    border-radius: 5rpx;
    width: 150rpx;
    height: 70rpx;
    background: transparent;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 20rpx;
    z-index: 6;
}

.shareDrawer {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 6;
}

.drawerContent {
    background-color: #fff;
    width: 100%;
    height: 20vh;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-around;
}

.shareImg {
    width: 110rpx;
    height: 110rpx;
}

.shareImg image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.precautions {
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 26rpx 35rpx 26rpx;
    font-size: 20rpx;
    white-space: pre-line;
    word-wrap: break-word;
    text-align: left;
}

.spliceGroup {
    width: 100vw;
    background-color: #fff;
    margin: 20rpx 0;
}

.spliceGroupTitle {
    box-sizing: border-box;
    padding: 0 20rpx;
    font-size: 25rpx;
    color: rgb(83, 81, 81);
    display: flex;
    flex-flow: row nowrap;
    height: 60rpx;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

.spliceGroupTitle::before {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: rgb(228, 228, 228);
}

.swiper_container {
    height: 230rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.singleItem {
    height: 90rpx;
}

.swiper_container .swiper_item {
    border-bottom: 1rpx solid rgb(226, 226, 226);
    box-sizing: border-box;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 0;
}

.itemLeft {
    height: 100%;
    display: inline-flex;
    flex-flow: row nowrap;
    align-items: center;
}

.itemLeft .userInfoAvatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.itemLeft .userName {
    font-size: 25rpx;
    color: rgb(112, 110, 110);
    margin-left: 20rpx;
    display: block;
    width: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper_item .state {
    display: inline-flex;
    flex-flow: row nowrap;
    align-items: center;
    font-size: 24rpx;
}

.state button {
    color: #fff;
    background-color: rgb(245, 56, 56);
    height: 50rpx;
    border-radius: 5rpx;
    padding: 0 10rpx;
    margin-left: 15rpx;
    font-size: 25rpx;
}
